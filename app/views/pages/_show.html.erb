<div class="container-fluid modal-margin">
  <div class="py-3 d-flex align-items-center justify-content-between">
    <h3><%= project.name %></h3>
    <%= link_to project.url, class: 'project-modal-name', target: 'blank' do %>
      <p class="m-0">Visit www project</p>
    <% end %>
  </div>

  <div class="row my-3">
    <div class="col-12 modal-image">
      <img src="https://images.unsplash.com/photo-1615773146406-277d9d3e7c2f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=934&q=80.jpg" alt="">
    </div>
    <div class="col-12 mt-5">
      <p class=""><%= project.description %></p>
      <div class="project-students mb-2">
        <% project.students.each do |s| %>
          <div class="">
            <%= image_tag s.avatar_url, class: 's-avatar-bordered'  %>
            <p class=""><%= s.name.split[0].capitalize %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <hr>
      <div class="d-flex justify-content-between align-items-center ">
        <div>
          <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

</div>
